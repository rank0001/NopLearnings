@model Nop.Plugin.Widgets.TopSellingProducts.Models.ConfigurationModel;
@{
    Layout = "_ConfigurePlugin";
}

<style>
    #FromDate, #ToDate{
        width:100%;
    }

</style>

<form asp-area="Admin" asp-controller="TopSellingProducts" asp-action="Configure" method="post">
    <div asp-validation-summary="All"></div>
    <div class="content">
        <div class="container-fluid">
            <div class="card card-default">
                <div class="card-header">
                    Configure Settings
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="FromDate" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="FromDate" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="ToDate" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="ToDate" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="TotalDisplay" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="TotalDisplay" />
                            <span asp-validation-for="TotalDisplay"></span>
                        </div>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary offset-3">
                <i class="fas fa-save"></i>
                Save
            </button>
        </div>
    </div>
</form>