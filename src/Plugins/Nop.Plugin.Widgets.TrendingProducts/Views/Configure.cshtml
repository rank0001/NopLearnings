@model Nop.Plugin.Widgets.TrendingProducts.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}

<link href="~/Plugins/Widget.TrendingProducts/Contents/css/configure.css" rel="stylesheet"/>

<form asp-area="Admin" asp-controller="TrendingProducts" asp-action="Configure" asp-antiforgery="true" method="post">
    <div class="content">
        <div class="container-fluid">
            <div class="card card-default">
                <div class="card-header">
                    Update Settings
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="FromDate" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="FromDate" />
                            <span asp-validation-for="FromDate"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="ToDate" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="ToDate" />
                            <span asp-validation-for="ToDate"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="Count" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Count" />
                            <span asp-validation-for="Count"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card card-default">
                <div class="card-header">
                    Update Slider Settings
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="SlidesToShow" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="SlidesToShow" />
                            <span asp-validation-for="SlidesToShow"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="SlidesToScroll" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="SlidesToScroll" />
                            <span asp-validation-for="SlidesToScroll"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="AutoPlay" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="AutoPlay" />
                            <span asp-validation-for="AutoPlay"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="AutoPlaySpeed" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="AutoPlaySpeed" />
                            <span asp-validation-for="AutoPlaySpeed"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card card-default">
                <div class="card-body">
                    <div class="form-group">
                        <div class="col-md-9 offset-md-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save mr-1"></i>
                                Save
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

